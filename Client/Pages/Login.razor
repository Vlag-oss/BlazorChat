@page "/"
@using BlazorChat.Client.ViewModels
@inject ILoginViewModel LoginViewModel
@inject NavigationManager NavigationManager

<h2><b>Login</b></h2>
<hr>

<div class="col-6">
    <input type="text" @bind-value="LoginViewModel.EmailAddress" class="form-control" placeholder="email address">
</div>
<br/>
<div class="col-6">
    <input type="password" @bind="LoginViewModel.Password" class="form-control" placeholder="password">
</div>
<br/>
<div class="col-6">
    <button class="btn btn-primary" @onclick="LoginUser">Login</button>
</div>

@code{
    public async Task LoginUser()
    {
        await LoginViewModel.LoginUser();
        NavigationManager.NavigateTo("/profile", true);
    }
}